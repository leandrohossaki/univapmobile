<h1>Lista de Unidades X Cursos</h1>

<table class="grid">
  <tr>
    <th colspan="3" align="left"><%= link_to image_tag('add.png', :border => 0), new_units_course_path, :title => 'Adicionar' %></th>
    <th>Unidade</th>
    <th>Curso</th>
  </tr>

<% @units_courses.each do |units_course| %>
  <tr>
    <td><%= link_to image_tag('view.png', :border => 0), units_course, :title => 'Visualizar' %></td>
    <td><%= link_to image_tag('edit.png', :border => 0), edit_units_course_path(units_course), :title => 'Editar' %></td>
    <td><%= link_to image_tag('delete.png', :border => 0), units_course, confirm: 'Deseja realmente excluir o registro?', method: :delete, :title => 'Excluir' %></td>
    <td><%= units_course.unit_id %></td>
    <td><%= units_course.course_id %></td>
  </tr>
<% end %>
</table>

<br />
