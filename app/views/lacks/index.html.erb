<h1>Lista de Faltas</h1>

<table class="grid">
  <tr>
    <th colspan="3" align="left"><%= link_to image_tag('add.png', :border => 0), new_lack_path, :title => 'Adicionar' %></th>
    <th>Disciplina</th>
    <th>Aluno</th>
    <th>Data</th>
    <th>Faltas</th>
  </tr>

<% @lacks.each do |lack| %>
  <tr>
    <td><%= link_to image_tag('view.png', :border => 0), lack, :title => 'Visualizar' %></td>
    <td><%= link_to image_tag('edit.png', :border => 0), edit_lack_path(lack), :title => 'Editar' %></td>
    <td><%= link_to image_tag('delete.png', :border => 0), lack, confirm: 'Deseja realmente excluir o registro?', method: :delete, :title => 'Excluir' %></td>
    <td><%= lack.discipline_id %></td>
    <td><%= lack.student_id %></td>
    <td><%= lack.date %></td>
    <td><%= lack.num_lacks %></td>
  </tr>
<% end %>
</table>

<br />
