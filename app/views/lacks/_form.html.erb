<%= form_for(@lack) do |f| %>
  <% if @lack.errors.any? %>
    <div id="error_explanation">
      <strong><%= @lack.errors.count.to_s %> erro(s) encontrado(s):</strong>

      <ul>
      <% @lack.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    </br>
  <% end %>

  <div class="fields">
    <table>
      <tr>
        <td><label for="lack_discipline_id">Disciplina</label></td>
        <td><%= text_field 'lack', 'discipline_id' %></td>
      </tr>
      <tr>
        <td><label for="lack_student_id">Aluno</label></td>
        <td><%= text_field 'lack', 'student_id' %></td>
      </tr>
      <tr>
        <td><label for="lack_date">Data</label></td>
        <td><%= text_field 'lack', 'date' %></td>
      </tr>
      <tr>
        <td><label for="lack_num_lacks">Faltas</label></td>
        <td><%= text_field 'lack', 'num_lacks' %></td>
      </tr>
      <tr>
        <td colspan="2" align="center"><%= f.submit @button_title %><td>
      </tr>
    </table>
  </div>
<% end %>
