<h1>Lista de Cursos</h1>

<table class="grid">
  <tr>
    <th colspan="3" align="left"><%= link_to image_tag('add.png', :border => 0), new_course_path, :title => 'Adicionar' %></th>
    <th>Código</th>
    <th>Descrição</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= link_to image_tag('view.png', :border => 0), course, :title => 'Visualizar' %></td>
    <td><%= link_to image_tag('edit.png', :border => 0), edit_course_path(course), :title => 'Editar' %></td>
    <td><%= link_to image_tag('delete.png', :border => 0), course, confirm: 'Deseja realmente excluir o registro?', method: :delete, :title => 'Excluir' %></td>
    <td><%= course.id %></td>
    <td><%= course.description %></td>
  </tr>
<% end %>
</table>

<br />
