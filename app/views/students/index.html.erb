<h1>Lista de Alunos</h1>

<table class="grid">
  <tr>
    <th colspan="3" align="left"><%= link_to image_tag('add.png', :border => 0), new_student_path, :title => 'Adicionar' %></th>
    <th>Código</th>
    <th>Nome</th>
    <th>Data Nascimento</th>
    <th>RG</th>
    <th>CPF</th>
    <th>Endereço</th>
    <th>Telefone</th>
    <th>Unidade</th>
    <th>Curso</th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= link_to image_tag('view.png', :border => 0), student, :title => 'Visualizar' %></td>
    <td><%= link_to image_tag('edit.png', :border => 0), edit_student_path(student), :title => 'Editar' %></td>
    <td><%= link_to image_tag('delete.png', :border => 0), student, confirm: 'Deseja realmente excluir o registro?', method: :delete, :title => 'Excluir' %></td>
    <td><%= student.id %></td>
    <td><%= student.name %></td>
    <td><%= student.birth %></td>
    <td><%= student.rg %></td>
    <td><%= student.cpf %></td>
    <td><%= student.address %></td>
    <td><%= student.phone %></td>
    <td><%= student.unit_id %></td>
    <td><%= student.course_id %></td>
  </tr>
<% end %>
</table>

<br />
