<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <strong><%= @student.errors.count.to_s %> erro(s) encontrado(s):</strong>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    </br>
  <% end %>

  <div class="fields">
    <table>
      <tr>
        <td><label for="student_id">Código</label></td>
        <td><%= text_field 'student', 'id', :disabled => 'disabled' %></td>
      </tr>
      <tr>
        <td><label for="student_name">Nome</label></td>
        <td><%= text_field 'student', 'name' %></td>
      </tr>
      <tr>
        <td><label for="student_password">Senha</label></td>
        <td><%= text_field 'student', 'password' %></td>
      </tr>
      <tr>
        <td><label for="student_birth">Data Nascimento</label></td>
        <td><%= text_field 'student', 'birth' %></td>
      </tr>
      <tr>
        <td><label for="student_rg">RG</label></td>
        <td><%= text_field 'student', 'rg' %></td>
      </tr
      <tr>
        <td><label for="student_cpf">CPF</label></td>
        <td><%= text_field 'student', 'cpf' %></td>
      </tr>
      <tr>
        <td><label for="student_address">Endereço</label></td>
        <td><%= text_field 'student', 'address' %></td>
      </tr>
      <tr>
        <td><label for="student_phone">Telefone</label></td>
        <td><%= text_field 'student', 'phone' %></td>
      </tr>
      <tr>
        <td><label for="student_unit_id">Unidade</label></td>
        <td><%= text_field 'student', 'unit_id' %></td>
      </tr>
      <tr>
        <td><label for="student_course_id">Curso</label></td>
        <td><%= text_field 'student', 'course_id' %></td>
      </tr>
      <tr>
        <td colspan="2" align="center"><%= f.submit @button_title %><td>
      </tr>
    </table>
  </div>
<% end %>
