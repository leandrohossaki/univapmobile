<h1>Lista de Categorias</h1>

<table class="grid">
  <tr>
    <th colspan="3" align="left"><%= link_to image_tag('add.png', :border => 0), new_category_path, :title => 'Adicionar' %></th>
    <th>Código</th>
    <th>Descrição</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to image_tag('view.png', :border => 0), category, :title => 'Visualizar' %></td>
    <td><%= link_to image_tag('edit.png', :border => 0), edit_category_path(category), :title => 'Editar' %></td>
    <td><%= link_to image_tag('delete.png', :border => 0), category, confirm: 'Deseja realmente excluir o registro?', method: :delete, :title => 'Excluir' %></td>
    <td><%= category.id %></td>
    <td><%= category.description %></td>
  </tr>
<% end %>
</table>

<br />
