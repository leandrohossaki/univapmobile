<h1>Lista de Unidades</h1>

<table class="grid">
  <tr>
    <th colspan="3" align="left"><%= link_to image_tag('add.png', :border => 0), new_unit_path, :title => 'Adicionar' %></th>
    <th>Código</th>
    <th>Nome</th>
    <th>Descrição</th>
    <th>Endereço</th>
    <th>Telefone</th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= link_to image_tag('view.png', :border => 0), unit, :title => 'Visualizar' %></td>
    <td><%= link_to image_tag('edit.png', :border => 0), edit_unit_path(unit), :title => 'Editar' %></td>
    <td><%= link_to image_tag('delete.png', :border => 0), unit, confirm: 'Deseja realmente excluir o registro?', method: :delete, :title => 'Excluir' %></td>
    <td><%= unit.id %></td>
    <td><%= unit.name %></td>
    <td><%= unit.description %></td>
    <td><%= unit.address %></td>
    <td><%= unit.phone %></td>
  </tr>
<% end %>
</table>

<br />
