<%= form_for(@unit) do |f| %>
  <% if @unit.errors.any? %>
    <div id="error_explanation">
      <strong><%= @unit.errors.count.to_s %> erro(s) encontrado(s):</strong>

      <ul>
      <% @unit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    </br>
  <% end %>

  <div class="fields">
    <table>
      <tr>
        <td><label for="unit_id">Código</label></td>
        <td><%= text_field 'unit', 'id', :disabled => 'disabled' %></td>
      </tr>
      <tr>
        <td><label for="unit_description">Nome</label></td>
        <td><%= text_field 'unit', 'name' %></td>
      </tr>
      <tr>
        <td><label for="unit_description">Descrição</label></td>
        <td><%= text_field 'unit', 'description' %></td>
      </tr>
      <tr>
        <td><label for="unit_address">Endereço</label></td>
        <td><%= text_field 'unit', 'address' %></td>
      </tr>
      <tr>
        <td><label for="unit_phone">Telefone</label></td>
        <td><%= text_field 'unit', 'phone' %></td>
      </tr>
      <tr>
        <td colspan="2" align="center"><%= f.submit @button_title %><td>
      </tr>
    </table>
  </div>
<% end %>
