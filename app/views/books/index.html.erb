<% @books.each do |book| %>
  <tr>
    <td><%= link_to image_tag('view.png', :border => 0), book, :title => 'Visualizar' %></td>
    <td><%= link_to image_tag('edit.png', :border => 0), edit_book_path(book), :title => 'Editar' %></td>
    <td><%= link_to image_tag('delete.png', :border => 0), book, confirm: 'Deseja realmente excluir o registro?', method: :delete, :title => 'Excluir' %></td>
    <td><%= book.id %></td>
    <td><%= book.category_id %></td>
    <td><%= book.name %></td>
    <td><%= book.author %></td>
    <td><%= book.editor %></td>
    <td><%= book.unit_id %></td>
  </tr>
<% end %>
</table>

